	+^#!s::

		SysGet, Monitor, Monitor, %A_Index%
		WinGet, active_id, ID, A

		; these WindowOffsets are to resolve the discrepancy between
		; AHK's WinMove function and the new Windows 10 border size
		; as of 2016-02-02
		WindowOffset_X     := -5
		WindowOffsetWidth  := 11
		WindowOffset_Y     := -1
		WindowOffsetHeight := 4

		window_X     := MonitorLeft   + WindowOffset_X
		window_Y     := MonitorTop    + WindowOffset_Y
		windowWidth  := MonitorRight  + WindowOffsetWidth
		windowHeight := MonitorBottom + WindowOffsetHeight

		SublimeText_WindowClass = PX_WINDOW_CLASS

		IfWinNotExist ahk_class SublimeText_WindowClass
			{
				Run, "C:\Program Files\Sublime Text 3\sublime_text.exe", ,
			}

		WinActivate
		WinWaitActive ahk_class %SublimeText_WindowClass%

		; remove window borders
		WinSet, Style, -0xC00000,A
		WinSet, Style, -0x40000,A
		Sleep, 1

		; move window to fullscreen area
		WinMove, , , window_X, window_Y, windowWidth, windowHeight

	Return
